<div class="fondo">
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center" id="login">
      <div class="card-header">
        <h1 class="h4">
          Ingresar
        </h1>
      </div>
        <img class="rounded mx-auto logo " src="/img/logo2.jpg" alt="Logo" >
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" style="color: black;" name="email" placeholder="Email" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" style="color: black;" name="password" placeholder="Contraseña">
          </div>
          <button class="btn btn-primary btn-block">
            Iniciar Sesión
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
